{
  "manifest_version": 3,
  "name": "Gemini Writing Engine",
  "version": "2.0",
  "description": "AI-powered side panel and context menu writing assistant.",
  "permissions": ["sidePanel", "contextMenus", "scripting", "storage"],
  "host_permissions": ["https://generativelanguage.googleapis.com/*"],
  "action": {
    "default_title": "Open Writing Engine"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}