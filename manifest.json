{
  "manifest_version": 3,
  "name": "Gemini Writing Engine",
  "version": "2.0.1",
  "description": "AI-powered side panel and context menu writing assistant.",
  
  "permissions": [
    "sidePanel",
    "contextMenus",
    "scripting",
    "storage"
  ],

  "host_permissions": [
    "<all_urls>",
    "https://generativelanguage.googleapis.com/*"
  ],

  "action": {
    "default_title": "Open Writing Engine"
  },

  "side_panel": {
    "default_path": "sidepanel.html"
  },

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
    "matches": ["<all_urls>"],
    "js": ["content.js"],
    "all_frames": true,
    "run_at": "document_idle"
    }
  ],

  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
